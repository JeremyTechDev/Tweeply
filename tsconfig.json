{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": false,
    "outDir": "./dist",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "*.tsx",
    "/pages"
  ],
  "exclude": [
    "node_modules"
  ]
}
